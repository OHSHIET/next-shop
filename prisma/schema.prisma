datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String    @unique
  password      String
  // shopping cart
}

model Product {
  id            String    @id @default(cuid())
  name          String    @unique
  img           String
  desc          String
  category      String
}